{
    "root": true,
    "env": {
      "es2021": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "overrides": [
      {
        "files": ["client/**/*.{js,jsx}"],
        "env": {
          "browser": true,
          "es6": true
        },
        "extends": ["plugin:react/recommended"]
      },
      {
        "files": ["server/**/*.js"],
        "env": {
          "node": true
        }
      }
    ]
  }
  