{
    "manifest_version": 3,
    "name": "Focus",
    "version": "1.0.0",
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "scripting",
        "storage",
        "activeTab",
        "tabs"
    ],

    "host_permissions": [
        "http://localhost/*",
        "http://stayontrack.site/*"
    ],
    
    "background": {
        "service_worker": "background.js"
    },

    "content_scripts": [
        {
            "matches": [
                "http://localhost/*",
                "http://stayontrack.site/*"
            ],
            "js": ["config.js", "content.js"]
        }
    ]
   
}